{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@atomus/parser": ["packages/parser/src"],
      "@atomus/compiler": ["packages/compiler/src"],
      "@atomus/cli": ["packages/cli/src"],
      "@atomus/web-ui": ["packages/web-ui/src"],
      "*": ["node_modules/*", "src/types/*"]
    },
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"]
}
